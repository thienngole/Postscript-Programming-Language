%Begin showText function
/showText { 
	true charpath stroke 
} def %End showText

%Begin displayText function
/displayText {
	%Begin the for loop 
	15 45 360 { gsave
	rotate 
	0 0 moveto
	(o r c h i d s ) showText
	grestore
	} for %End for loop
} def %End displayText

%Call displayText
306 448 translate % Move to middle of the page
/Times-Roman findfont 45 scalefont setfont  %Set text font
2.0 setlinewidth %Set the text width
1 1 1 setrgbcolor %Set text color
0.9 0.9 scale
displayText

showpage