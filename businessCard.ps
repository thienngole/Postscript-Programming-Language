%This program designs a business card

%make the black background for the whole page.
/pageBackGround { 
	newpath
	0 0 moveto
	0 792 rlineto
	612 0 rlineto
	0 -792 rlineto
	closepath
	0.5 setlinewidth
	0 0 0 setrgbcolor fill
	stroke 
} def
pageBackGround

%Do card outline
/cardOutline { 
	newpath
	54 54 moveto
	0 288 rlineto
	504 0 rlineto
	0 -288 rlineto
	closepath
	2.0 setlinewidth
	0.7 0.3 0.0 setrgbcolor 
	stroke 
} def
%Call cardOutline to draw the outline
cardOutline

%Draw the left border
/pagelength 320 def
/doCircle {
	xpos ypos radius 90 270 arc 
	stroke
} def

/increase-y { 
	ypos radius add
	/ypos exch def 
} def

/leftvertical { 
	/xpos exch def 
	/radius exch def 
	/ypos 78.5 def 
	%begin loop
	{ypos pagelength le 
		{
			doCircle increase-y
		}

		{
			exit
		} ifelse
	}loop %end loop
} def 
0.7 0.3 0.0 setrgbcolor
20 80 leftvertical

